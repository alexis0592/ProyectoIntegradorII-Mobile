<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">

    <TextView
        android:id="@+id/item_ubicacion_txvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/item_ubicacion_txvLongitud"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="id"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/item_ubicacion_txvLatitud"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="id"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/item_ubicacion_txvBloque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bloque"
        android:padding="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        android:padding="3dp"/>

    <TextView
        android:id="@+id/item_ubicacion_txvOficina"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="salon"
        android:padding="3dp"/>

</LinearLayout>