<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ubicameudea"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ubicamelog"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_etxBloque"
            android:hint="Bloque"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textColorHint="#ff000000"
            android:textColor="#ff000000"
            android:inputType="number"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_etxSalon"
            android:hint="Salón u oficina"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textColorHint="#ff000000"
            android:textColor="#ff000000"
            android:inputType="number"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/goMapButton"
            android:src="@android:drawable/ic_menu_search"
            android:background="#6c9a06"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="1">

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/busquedavanzada"
            android:background="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:onClick="advancedSearchClick"/>-->

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Búsqueda Avanzada"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:id="@+id/btn_advance_search"
            android:background="#6c9a06"
            android:textColor="#ffffffff"
            android:layout_weight="0.11"
            android:textStyle="bold"
            android:onClick="advancedSearchClick"/>
    </LinearLayout>
</LinearLayout>